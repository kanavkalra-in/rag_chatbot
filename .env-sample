# Project Information
PROJECT_NAME="RAG chatbot"
PROJECT_VERSION="1.0.0"
PROJECT_DESCRIPTION="A RAG chatbot application"

# API Configuration
API_PREFIX="/api/v1"
HOST="0.0.0.0"
PORT=8000
DEBUG=False

# CORS Configuration
CORS_ORIGINS="*"

# Database Configuration (optional)
# DATABASE_URL=""

# Security
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Session Management
MAX_CONCURRENT_SESSIONS=1000  # Optional: limit concurrent sessions
SESSION_TIMEOUT_HOURS=1      # Session expiration time

# LLM Configuration
CHAT_MODEL=gpt-4
CHAT_MODEL_TEMPERATURE=0.7
CHAT_MODEL_MAX_TOKENS=2000

# Logging Configuration
LOG_LEVEL="INFO"

# OpenAI Configuration (Required for embeddings and vector store)
# Replace with your actual OpenAI API key
OPENAI_API_KEY="OpenAI API key"

AGENT_POOL_SIZE=1

# LangSmith Configuration (Optional - for observability and tracing)
# Get your API key from https://smith.langchain.com
# LANGCHAIN_TRACING_V2=true
# LANGSMITH_API_KEY=your-langsmith-api-key-here  # Preferred name per LangSmith Studio docs
# LANGCHAIN_API_KEY=your-langsmith-api-key-here  # Legacy name (also supported)
# LANGCHAIN_PROJECT=rag-chatbot
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# LANGSMITH_WORKSPACE_ID=your-workspace-id  # Only required if your API key is org-scoped
#                                           # If you get an error about workspace_id, set this value
#                                           # You can find your workspace ID in LangSmith settings