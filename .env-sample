# Server Configuration (deployment-specific)
HOST="0.0.0.0"
PORT=8000
DEBUG=False

# CORS Configuration (deployment-specific)
CORS_ORIGINS="*"

# Database Configuration (optional)
# DATABASE_URL=""

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_DB=0

# Security (REQUIRED - change in production!)
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Session Management (optional)
MAX_CONCURRENT_SESSIONS=1000  # Optional: limit concurrent sessions
SESSION_TIMEOUT_HOURS=24      # Session expiration time in hours

# Logging Configuration
LOG_LEVEL="INFO"

# API Keys (REQUIRED - set your actual API keys)
# OpenAI API key (Required for embeddings and vector store)
OPENAI_API_KEY="your-openai-api-key-here"

# Optional: Anthropic API key (for Claude models)
# ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Optional: Google API key (for Gemini models)
# GOOGLE_API_KEY="your-google-api-key-here"

# Optional: Ollama Configuration (for local models)
# OLLAMA_BASE_URL="http://localhost:11434"


# LangSmith Configuration (Optional - for observability and tracing)
# Get your API key from https://smith.langchain.com
# LANGCHAIN_TRACING_V2=true
# LANGSMITH_API_KEY=your-langsmith-api-key-here  # Preferred name per LangSmith Studio docs
# LANGCHAIN_API_KEY=your-langsmith-api-key-here  # Legacy name (also supported)
# LANGCHAIN_PROJECT=rag-chatbot
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# LANGSMITH_WORKSPACE_ID=your-workspace-id  # Only required if your API key is org-scoped
#                                           # If you get an error about workspace_id, set this value
#                                           # You can find your workspace ID in LangSmith settings